<div class="d-flex align-items-center justify-content-center">
  <div class="card m-3" style="width: 80rem">
    <div class="card-header">
      <h5 class="d-inline">{{title}}</h5>
      <p class="d-inline float-end">Date posted:
        {{format_date date_created}}
        By user:
        {{User.username}}</p>
    </div>
    <div class="card-body">
      <p class="card-text">{{content}}</p>
    </div>
  </div>
</div>
{{#each Comments as |comment|}}
{{>comment}}
{{/each}}
<div class="d-flex align-items-center justify-content-center">
  <div class="card m-3" style="width: 70rem">
    <div class="m-3">
      <h5 for="exampleFormControlTextarea1" class="form-label">
        Post a comment!
      </h5>
      <textarea
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
      ></textarea>
      <button type="submit" class="btn btn-primary m-3">Submit</button>
    </div>
  </div>
</div>