<div class="d-flex align-items-center justify-content-center">
  <div class="card m-3" style="width: 80rem">
    <div class="card-header text-bg-info">
      <h5 class="d-inline">Title: {{title}}</h5>
      <p class="d-inline float-end">Date posted:
        {{format_date date_created}}
        By user:
        {{User.username}}</p>
    </div>
    <div class="card-body">
      <p class="card-text">{{content}}</p>
      <a href="./post/{{id}}" class="btn btn-primary">Click to view post or
        comment</a>
    </div>
  </div>
</div>